/* header */

.header {

}

.header-image {
	height: 250px;;
	background: url('../img/background-header.jpg') no-repeat center top fixed;
	-webkit-background-size: 100%;
	-moz-background-size: 100%;
	-o-background-size: 100%;
	background-size: 100%;
}

.logo-image {
	background: url('../img/logo.png') no-repeat center bottom;
	width: 535px;
	height: 111px;
	display: block;
	margin:auto;
}

input {
	background-image: -webkit-gradient(linear, center top, center bottom, from(#3b3b3b), to(#595959));
	background-image: -webkit-linear-gradient(top, #3b3b3b, #595959);
	background-image: -moz-linear-gradient(top, #3b3b3b, #595959);
	background-image: -o-linear-gradient(top, #3b3b3b, #595959);
	background-image: -ms-linear-gradient(top, #3b3b3b, #595959);
	background-image: linear-gradient(to bottom, #3b3b3b, #595959);
	-webkit-box-shadow: 0 1px 0 rgba(255,255,255,0.01), inset 0 1px 0 rgba(0,0,0,0.01);
	-moz-box-shadow: 0 1px 0 rgba(255,255,255,0.01), inset 0 1px 0 rgba(0,0,0,0.01);
	box-shadow: 0 1px 0 rgba(255,255,255,0.01), inset 0 1px 0 rgba(0,0,0,0.01);
}